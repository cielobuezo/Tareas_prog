    public Editor_text() {
        initComponents();
        archivo=null;
        doc = jTextArea1.getStyledDocument();
        estilo = jTextArea1.addStyle("miEstilo", null);
        
        DefaultComboBoxModel modelo =(DefaultComboBoxModel)cbfont.getModel();
        GraphicsEnvironment ge = GraphicsEnvironment.getLocalGraphicsEnvironment();
        String fontNames[] = ge.getAvailableFontFamilyNames();
        for (int i = 0; i< fontNames.length; i++){
            modelo.addElement(fontNames[i]);
        }
        
        cbfont.setModel(modelo);
    }

