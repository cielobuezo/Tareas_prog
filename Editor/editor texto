    private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        try{
            StyleConstants.setItalic(estilo, true);
            
            doc.setCharacterAttributes(jTextArea1.getSelectionStart(),
                jTextArea1.getSelectionEnd()- jTextArea1.getSelectionStart(),
                jTextArea1.getStyle("mi estilo"),
                true);
        }
          catch (Exception ex){
              
         }
        // TODO add your handling code here:
    }                                        

    private void MenuItemguardarActionPerformed(java.awt.event.ActionEvent evt) {                                                
        String texto = jTextArea1.getText();
        PrintWriter pw;
        if(archivo != null)
        {
        
        try 
        { 
            pw = new PrintWriter(archivo);
            pw.print(texto);
            pw.close();
            
        }catch (FileNotFoundException ex)  {
            Logger.getLogger(Editor_text.class.getName()).log(Level.SEVERE, null, ex);
        }
        }
        // TODO add your handling code here:
    }                                               

    private void cbtamañoActionPerformed(java.awt.event.ActionEvent evt) {                                         
        StyleConstants.setFontSize(estilo,Integer.parseInt(cbtamaño.getSelectedItem().toString()) );
        doc.setCharacterAttributes(jTextArea1.getSelectionStart(),
                jTextArea1.getSelectionEnd()-jTextArea1.getSelectionStart(),
                jTextArea1.getStyle("miEstilo"),
                true);
                

        // TODO add your handling code here:
    }                                        

    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
